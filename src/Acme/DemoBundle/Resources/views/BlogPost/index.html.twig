{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BlogPost list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('blogpost_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('blogpost_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('blogpost_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                        <li>
                            <button id="delete-{{ loop.index }}" class="delete-title"
                                    onclick="return confirm('Are you sure ?') && $(this).closest('tr').remove() && false">
                                Delete
                            </button>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blogpost_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

    <script type="text/javascript" src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
{% endblock %}
